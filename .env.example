# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/futureself?schema=public"

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL="https://your-domain.com"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# =============================================================================
# OPENAI (Required for chapter generation)
# =============================================================================
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Sign up: https://resend.com
# Free tier: 3,000 emails/month
RESEND_API_KEY="re_..."
EMAIL_FROM="Future Self <noreply@yourdomain.com>"

# =============================================================================
# FREEDOMPAY PAYMENT SYSTEM
# Documentation: https://docs.freedompay.kz/
# =============================================================================

# Merchant credentials (get from FreedomPay dashboard)
FREEDOMPAY_MERCHANT_ID="your_merchant_id"
FREEDOMPAY_SECRET_KEY="your_secret_key"

# API endpoint (production or test)
# Production: https://api.freedompay.kz
# Test: https://api.freedompay.money
FREEDOMPAY_GATEWAY_BASE="https://api.freedompay.kz"
FREEDOMPAY_TEST_MODE="false"

# Callback URLs (MUST be publicly accessible!)
# These URLs are sent with each payment request
# FreedomPay will call these after payment processing
FREEDOMPAY_RESULT_URL="https://your-domain.com/api/v1/payments/freedompay/result"
FREEDOMPAY_CHECK_URL="https://your-domain.com/api/v1/payments/freedompay/check"

# Redirect URLs (where user goes after payment)
FREEDOMPAY_SUCCESS_URL="https://your-domain.com/payment/success?status=success"
FREEDOMPAY_FAILURE_URL="https://your-domain.com/payment/success?status=failed"

# =============================================================================
# PRICING CONFIGURATION (KZT)
# =============================================================================
NEXT_PUBLIC_PRICE_7_KZT="1000"
NEXT_PUBLIC_PRICE_20_KZT="2000"
NEXT_PUBLIC_PRICE_40_KZT="5000"
NEXT_PUBLIC_PRICE_100_KZT="6000"

# Server-side pricing (used in API)
PRICE_7_KZT=1000
PRICE_20_KZT=2000
PRICE_40_KZT=5000
PRICE_100_KZT=6000

# =============================================================================
# CURRENCY EXCHANGE RATES (KZT per unit)
# =============================================================================
NEXT_PUBLIC_RATE_USD="470"
NEXT_PUBLIC_RATE_EUR="510"

# Rounding steps for display
NEXT_PUBLIC_ROUND_KZT="10"
NEXT_PUBLIC_ROUND_USD="1"
NEXT_PUBLIC_ROUND_EUR="1"
